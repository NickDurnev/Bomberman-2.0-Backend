{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@services/*": ["src/services/*"],
      "@entity/*": ["src/entity/*"],
      "@routes/*": ["src/routes/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@db/*": ["src/db/*"],
      "@types": ["src/types"],
      "@constants": ["src/constants"],
      "@utils": ["src/utils"]
    },
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
